<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="MauiApp1.OperationMapPage"
             Title="NewPage1">

    <VerticalStackLayout>
        <!-- Your map -->
        <maps:Map x:Name="OperationalMap" MapType="Street" HeightRequest="400" />

        <!-- Buttons for zooming -->
        <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
            <Button Text="Zoom In" HorizontalOptions="Center" Margin="5"/>
            <Button Text="Zoom Out" HorizontalOptions="Center" Margin="5"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>

</ContentPage>
