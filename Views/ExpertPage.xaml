<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.ExpertPage"
             Title="Expert Page"
             xmlns:local="clr-namespace:MauiApp1.Models">
   
    <VerticalStackLayout Spacing="10" Margin="5">
        <Editor x:Name="txe_expert"
            Placeholder="Add an Expert"
            HeightRequest="100" />

        <Grid ColumnDefinitions="*,*" ColumnSpacing="5">
            <Button Text="Save"
                Clicked="SaveButton_Clicked" />

            <Button Grid.Column="1"
                Text="Delete"
                Clicked="DeleteButton_Clicked" />
        </Grid>

        <ListView x:Name="ltv_expert" Background="white" ItemSelected="ltv_expert_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell TextColor="Black" Text="{Binding Skill}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>