<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UndacApp.Views.NeedsPage"
             Title="Needs Page"
             xmlns:local="clr-namespace:Undac.Models">
    <VerticalStackLayout Spacing="10" Margin="5">
        <Editor x:Name="txe_need"
                Placeholder="Add a Need"
                HeightRequest="100" />

        <Editor x:Name="txe_priority"
                Placeholder="Type Priority (high,med,low)"
                HeightRequest="100" />

        <Grid ColumnDefinitions="*,*" ColumnSpacing="4">
            <Button Text="Save"
                    Clicked="SaveButton_Clicked" />

            <Button Grid.Column="1"
                    Text="Delete"
                    Clicked="DeleteButton_Clicked" />
        </Grid>

        <ListView x:Name="ltv_needs" Background="white" ItemSelected="ltv_needs_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell TextColor="Black" Text="{Binding Name}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>
