<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UndacApp.Views.OperationPage"
             Title="OperationPage">
    <VerticalStackLayout>
        <ListView x:Name="operationListView"
          ItemsSource="{Binding OperationList}"
          Margin="20"
          SelectionMode="Single"
          SelectedItem="{Binding SelectedOperation, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Name, StringFormat='Operation Name: {0}'}" FontAttributes="Bold"/>
                            <Label Text="{Binding Type, StringFormat='Operational Team ID: {0}'}"/>
                            <Label Text="{Binding RequestedBy, StringFormat='Requested By: {0}'}"/>
                            <Label Text="{Binding RequestDate, StringFormat='Request Date: {0:yyyy-MM-dd}'}"/>
                            <Label Text="{Binding ResourceId, StringFormat='Resource ID: {0}'}"/>
                            <Label Text="{Binding Status, StringFormat='Status: {0}'}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>