<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UndacApp.Views.RequestEquipment"
              xmlns:local="clr-namespace:UndacApp.Models">
    <StackLayout Margin="20">
        <Picker x:Name="equipmentPicker" Title="Select Equipment" ItemsSource="{Binding Equipments}" ItemDisplayBinding="{Binding Name}" SelectedIndexChanged="OnPickerSelectedIndexChanged" />

        <Picker x:Name="operationPicker" Title="Select Operation" ItemsSource="{Binding Operations}" ItemDisplayBinding="{Binding Name}" SelectedIndexChanged="OnOperationPickerSelectedIndexChanged" />

        <Button Text="Add Equipment" Clicked="OnAddClicked" />

        <ListView ItemsSource="{Binding RequestedEquipment}" ItemSelected="OnItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>