<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YourNamespace.Views.ResourceRequestPage"
             Title="Resource Request">

    <VerticalStackLayout Spacing="15" Padding="10">
        <!-- Error Input -->
        <Entry x:Name="errorEntry" Placeholder="Enter Error" />

        <!-- Additional Resource Input -->
        <Entry x:Name="additionalResourceEntry" Placeholder="Enter Additional Resource" />

        <!-- Submit Button -->
        <Button Text="Submit" Command="{Binding SubmitCommand}" />

        <!-- List of Errors and Resources -->
        <ListView ItemsSource="{Binding ErrorResourcePairs}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Error}" Detail="{Binding Resource}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>
