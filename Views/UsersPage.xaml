<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UndacApp.Views.UsersPage"
             Title="User Management">

    <VerticalStackLayout Spacing="10" Margin="5">
        <Entry x:Name="txtName" Placeholder="Name"/>
        <Entry x:Name="txtEmail" Placeholder="Email"/>
        <Picker x:Name="pickerAccessLevel" Title="Access Level">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Low</x:String>
                    <x:String>Medium</x:String>
                    <x:String>High</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Button Text="Add User" Clicked="AddUserButton_Clicked"/>

        <!-- Admin Credentials Section (Initially Hidden) -->
        <StackLayout x:Name="adminCredentialsLayout" IsVisible="False">
            <Label Text="Enter your credentials to add user" />
            <Entry x:Name="txtAdminUsername" Placeholder="Admin Username"/>
            <Entry x:Name="txtAdminPassword" Placeholder="Admin Password" IsPassword="True"/>
            <Button Text="Check" Clicked="CheckCredentialsButton_Clicked"/>
        </StackLayout>

        <!-- ListView to display users -->
    </VerticalStackLayout>
</ContentPage>
